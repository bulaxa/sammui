<!doctype html>
<html>
<head>
    <meta charset="utf-8">

    <title>My AngularJS App</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui"/>
    <meta name="apple-mobile-web-app-status-bar-style" content="yes"/>

    <link rel="stylesheet" href="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/css/mobile-angular-ui-hover.css") }}"/>
    <link rel="stylesheet" href="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/css/mobile-angular-ui-base.css") }}"/>
    <link rel="stylesheet" href="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/css/mobile-angular-ui-desktop.css") }}"/>

    <link rel="stylesheet" href="{{ asset('bundles/frontend/css/app.css') }}"/>

</head>

<body ng-app="sammui">

<!-- Sidebars -->
<div ng-include="'{{ asset('bundles/frontend/partials/layout/sidebar.html') }}'"
     ui-track-as-search-param='true'
     class="sidebar sidebar-left"></div>

<div ng-include="'{{ asset('bundles/frontend/partials/layout/sidebarRight.html') }}'"
     class="sidebar sidebar-right"></div>

{% verbatim %}
<div class="app" ng-swipe-right='Ui.turnOn("uiSidebarLeft")' ng-swipe-left='Ui.turnOff("uiSidebarLeft")'>

    <!-- Navbars -->
    <div class="navbar navbar-app navbar-absolute-top">
        <div class="navbar-brand navbar-brand-center" ui-yield-to="title">
            {{ 'index-title' | translate }}
        </div>
        <div class="btn-group pull-left">
            <div ui-toggle="uiSidebarLeft" class="btn sidebar-toggle">
                <i class="fa fa-bars"></i> {{ 'index-title-sidebar-left' | translate }}
            </div>
        </div>
        <div class="btn-group pull-right" ui-yield-to="navbarAction">
            <div ui-toggle="uiSidebarRight" class="btn">
                <i class="fa fa-angle-left"></i> {{ 'index-title-sidebar-right' | translate }}
            </div>
        </div>
    </div>

    <div class="navbar navbar-app navbar-absolute-bottom">
        <div class="btn-group justified">
            <a href="http://mobileangularui.com/" class="btn btn-navbar"><i class="fa fa-home fa-navbar"></i> Docs</a>
            <a href="https://github.com/mcasimir/mobile-angular-ui" class="btn btn-navbar"><i
                        class="fa fa-github fa-navbar"></i> Sources</a>
            <a href="https://github.com/mcasimir/mobile-angular-ui/issues" class="btn btn-navbar"><i
                        class="fa fa-exclamation-circle fa-navbar"></i> Issues</a>
        </div>
    </div>

    <!-- App Body -->
    <div class="app-body" ng-class="{loading: loading}">
        <div ng-show="loading" class="app-content-loading">
            <i class="fa fa-spinner fa-spin loading-spinner"></i>
        </div>
        <div class="app-content">
            <ng-view></ng-view>
        </div>
    </div>

</div>
<!-- ~ .app -->

<div ui-yield-to="modals"></div>

{% endverbatim %}

{% block javascripts %}

    {% set FrontendBundleComponents = "bundles/frontend/components" %}

    <script src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/sha1.js"></script>
    <script src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/sha512.js"></script>
    <script src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/md5.js"></script>
    <script src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/components/enc-base64-min.js"></script>

    {#Angular JS resources#}
    <script src="{{ asset("bundles/frontend/components/angular/angular.js") }}"></script>
    <script src="{{ asset("bundles/frontend/components/angular-i18n/angular-locale_en-us.js") }}"></script>
    <script src="{{ asset("bundles/frontend/components/angular-loader/angular-loader.js") }}"></script>
    <script src="{{ asset("bundles/frontend/components/angular-route/angular-route.js") }}"></script>
    <script src="{{ asset("bundles/frontend/components/angular-cookies/angular-cookies.js") }}"></script>
    <script src="{{ asset("bundles/frontend/components/angular-resource/angular-resource.js") }}"></script>

    <script src="{{ asset("bundles/translate/components/angular-translate/angular-translate.js") }}"></script>

    {#Mobile Angular UI#}
    <script src="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/js/mobile-angular-ui.js") }}"></script>
    <script src="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/js/mobile-angular-ui.gestures.js") }}"></script>

    {#Angular APP#}
    <script src="{{ asset('bundles/frontend/js/app.js') }}"></script>
    <script src="{{ asset('bundles/translate/js/translate.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/services.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/controllers.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/filters.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/directives.js') }}"></script>

{% endblock %}

</body>

</html>