{% verbatim %}
<div ui-content-for="title">
    <span>{{ 'translate-admin-index' | translate }}</span>
</div>

<div class="scrollable">
    <div class="scrollable-content section">

        <div ng-class="{loading: loading}">
            <div ng-show="loading_langs" class="app-content-loading">
                Loading<i class="fa fa-spinner fa-spin loading-spinner"></i>
            </div>
        </div>
        <div class="btn-group">
            <a href="" class="btn btn-default">{{ 'translate-admin-new' | translate }}</a>
            <a ng-repeat="l in translate.langs" ng-click="langChange(l.key)" class="btn btn-default">{{ l.key }}</a>
        </div>

        <hr>

        <table ng-show="translate.table" class="table table-striped table-hover table-condensed">
            <thead style="font-weight: bold">
            <tr>
                <td style="width:40%">Key</td>
                <td style="width:35%">Value</td>
                <td style="width:15%">Edit</td>
                <td style="width:10%">
                    <button class="btn btn-success btn-sm" ng-click="addLangKey()">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="translation in translate.langKeys">
                <td>
                    <span editable-text="translation.key"
                          e-name="value" e-form="translateLangKeyForm"
                          e-required>
                        {{ translation.key || ('translate-edit-empty' | translate) }}
                    </span>
                </td>
                <td>
                    <span editable-text="translation.value" e-placeholder="Translation"
                          e-name="value" e-form="translateLangKeyForm"
                          e-required>
                        {{ translation.value || ('translate-edit-empty' | translate) }}
                    </span>
                </td>
                <td style="white-space: nowrap" colspan="2">
                    <!-- form -->
                    <form editable-form name="translateLangKeyForm"
                          onbeforesave="saveUser($data, translation.id)"
                          ng-show="translateLangKeyForm.$visible" class="form-buttons form-inline"
                          shown="inserted == translation">
                        <button type="submit" ng-disabled="translateLangKeyForm.$waiting" class="btn btn-primary">
                            save
                        </button>
                        <button type="button" ng-disabled="translateLangKeyForm.$waiting"
                                ng-click="translateLangKeyForm.$cancel()"
                                class="btn btn-default"> cancel
                        </button>
                    </form>
                    <div class="buttons" ng-show="!translateLangKeyForm.$visible">
                        <button class="btn btn-primary" ng-click="translateLangKeyForm.$show()">edit</button>
                        <button class="btn btn-danger" ng-click="deleteLangKey($index)">del</button>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>

    </div>
</div>

{% endverbatim %}

<div ui-content-for="modals">
    <div ng-include="'{{ asset('bundles/frontend/partials/layout/modal/modalError.html') }}'"></div>
</div>