<!DOCTYPE html>
<html ng-app="sammui">
<head>
    <meta charset="UTF-8"/>

    <title>{% block title %}My sammui App!{% endblock %}</title>

    {% block metatags %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="apple-mobile-web-app-capable" content="yes"/>
        <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui"/>
        <meta name="apple-mobile-web-app-status-bar-style" content="yes"/>
    {% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("bundles/frontend/components/bootstrap/dist/css/bootstrap.css") }}"/>
        <link rel="stylesheet"
              href="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/css/mobile-angular-ui-hover.css") }}"/>
        <link rel="stylesheet"
              href="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/css/mobile-angular-ui-base.css") }}"/>
        <link rel="stylesheet"
              href="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/css/mobile-angular-ui-desktop.css") }}"/>
        <link rel="stylesheet"
              href="{{ asset("bundles/frontend/components/angular-xeditable/dist/css/xeditable.css") }}"/>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <base href="/">

</head>

<body ui-prevent-touchmove-defaults>

{% block body %}{% endblock %}

{% block javascripts %}

    {#Angular JS resources#}
    <script type="text/javascript" src="{{ asset("bundles/frontend/components/angular/angular.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/angular-i18n/angular-locale_en-us.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/angular-loader/angular-loader.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/angular-route/angular-route.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/angular-animate/angular-animate.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/angular-cookies/angular-cookies.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/angular-resource/angular-resource.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/api/components/angular-http-auth/src/http-auth-interceptor.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/translate/components/angular-translate/angular-translate.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/angular-xeditable/dist/js/xeditable.js") }}"></script>

    {#Mobile Angular UI#}
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/js/mobile-angular-ui.js") }}"></script>
    <script type="text/javascript"
            src="{{ asset("bundles/frontend/components/mobile-angular-ui/dist/js/mobile-angular-ui.gestures.js") }}"></script>

{% endblock %}

</body>

</html>